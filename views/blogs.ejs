<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Sign In</title>
</head>

<body>
    <%- include('./partials/navBar') %>

        <h1 style="text-align: center; font-weight: bold; margin-top: 15px;">ADD BLOGS</h1>

        <form class="container mt-5" action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Cover Image</label>
                <input class="form-control" type="file" id="formFile" name="thumbnail">
            </div>
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" name="title">
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" style="height: 100px" name="description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Post</button>
        </form>

        <%- include('./partials/script') %>
</body>

</html>