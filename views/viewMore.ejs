<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>about</title>
</head>

<body>
    <%- include('./partials/navBar') %>

        <div class="container mt-5">
            <h1 style="text-align: center; font-weight: bold; margin-top: 15px;">
                <%= aboutBlog.title %>
            </h1>
            <div style="width: 100%; display: flex; justify-content: center;">
                <img src="/<%= aboutBlog.thumbnailUrl %>"
                    style="height: 350px; width: 70%; object-fit: cover; margin-top: 20px; margin-bottom: 20px;">
            </div>
            <p>
                <%= aboutBlog.description %>
            </p>
            <!-- comments -->

        </div>
        <div class="container mt-3" style="display: flex; gap: 10px; align-items: center;">
            <img src="<%= aboutBlog.createdBy.profilePicUrl %>" style="width: 50px; height: 50px;">
            <p>
                <%= aboutBlog.createdBy.fullName %>
            </p>
        </div>

        <h1 class="container mt-3 mb-2">Comments (<%= comments.length %>)</h1>


        <div class="container mt-3 mb-3">
            <% comments.forEach(comments=> { %>
                <div class="container mt-3" style=" display: flex; gap: 10px; align-items: center;">
                    <img src="<%= comments.createdBy.profilePicUrl %>" style="width: 50px; height: 50px;">
                    <p style="font-weight: bold;">
                        <%= comments.createdBy.fullName %>
                    </p>
                </div>
                <p style="margin-left: 70px; margin-top: -10px;">
                    <%= comments.comment%>
                </p>
                <% }) %>
        </div>

        <% if (locals.user) { %>
            <form action="/blog/comment/<%= aboutBlog._id %>" method="post">
                <div class="container mt-5 mb-5">
                    <div class="container" style="display: flex; gap: 10px;">
                        <img src="<%= aboutBlog.createdBy.profilePicUrl %>" style="width: 50px; height: 50px;">
                        <input type="text" class="form-control" name="comment" placeholder="Write comments.....">
                    </div>
                    <button class="btn btn-primary mt-2" type="submit">Add comment</button>
                </div>
            </form>
            <% } %>



                <%- include('./partials/script') %>
</body>

</html>